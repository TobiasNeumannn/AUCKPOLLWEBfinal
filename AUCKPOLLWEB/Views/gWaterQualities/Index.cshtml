@model IEnumerable<AUCKPOLLWEB.Models.gWaterQuality>

@{
    ViewData["Title"] = "Index";
}

<h1>Ground Water Quality</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="gWaterQualities" asp-action="Index">
    <p>
        Region: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.collection_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.indicator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.collection_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.indicator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.region_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
